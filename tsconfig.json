{
  "compilerOptions": {
    "target": "es6",
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "filesGlob": [
    "./src/**/*.ts",
    "./node_modules/**/*.ts"
  ]
}
